{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
{% if error %}
    <div class="alert-message warning">
        <a class="close" href="#">Ã—</a>
        <p>{{ error }}</p>
    </div>
{% endif %}

<form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="control-group">
        <label class="control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
            <input type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
            <input type="password" id="password" name="_password" />
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
            <input class="checkbox" type="checkbox" id="remember_me" name="_remember_me" value="on" />
        </div>
    </div>

    <div class="form-actions">
        <input type="submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}"/>
    </div
</form>
{% endblock fos_user_content %}

{% extends 'BoShurikSurveyBundle::base.html.twig' %}

{% block content %}
<h1>Survey</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
    </tbody>
</table>

<h1>Total answers: {{ answers | length }}</h1>
{% for answer in answers %}
    <h2>{{ answer.user.username }}</h2>
    {% for choice in answer.choices %}
        {{ choice.question.name }} = {{ choice.name }}<br />
    {% endfor %}
{% endfor %}

<ul class="record_actions">
    <li>
        <a href="{{ path('survey') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('survey_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
</ul>
{% endblock %}